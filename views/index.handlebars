<div class="container text-center">
    <img src="../assets/img/burger-151421_640.png" alt="Burger Image">
</div>

<h1 class="text-center">Eats-Sa-Burger!</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div>
                <h1>Burgers to eat!</h1>
                <hr>
            </div>
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                <div class="btn-group btn-group-justified" role="group">
                  <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default">{{burger_name}}</button>
                    <span class="input-group-addon"><button class="btn btn-primary btn-md devoured" data-burger-id="{{this.id}}">Devoure it!</button></span>
                    <hr>
                  </div>
                </div>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4 col-md-offset-3">
             <div>
                <h1>Eaten Burgers!</h1>
                <hr>
            </div>
             <ul>
                {{#each burger}}
                {{#if devoured}}
                <div class="btn-group btn-group-justified" role="group">
                  <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default">{{burger_name}}</button>
                    <hr>
                  </div>
                </div>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-md-5 col-md-offset-4">
            <form class="create-form">
              <div class="form-group">
                <label for="new-burger">Please enter a burger</label>
                <input type="text" class="form-control" id="new-burger" placeholder="Enter a Burger">
              </div>
              <button id="add-burger" type="submit" class="btn btn-success btn-lg">Submit</button>
            </form>            
        </div>
    </div>
</div>
